@model Cart

<!-- Create a razor view for the updated shopping cart items/values in the navbar -->
<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text text-white">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.ComputeTotalSum().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn " asp-page="/Purchase"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>